{
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 8,
    "patch": 0
  },
  "version": 3,

  "configurePresets": [
    {
      "hidden": true,
      "name": "default-msvc",
      "description": "default build for MSVC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/msvc/${presetName}",
      "environment": {
        "CC": "cl.exe",
        "CXX": "cl.exe"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_CXX_FLAGS_INIT": "-Wall"
      }
    },
    {
      "hidden": true,
      "name": "default-clang",
      "description": "default build for clang",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/clang/${presetName}",
      "environment": {
        "CC": "clang-cl",
        "CXX": "clang-cl"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_CXX_FLAGS_INIT": "-mavx -mavx2 -ferror-limit=0 -Wall -Wextra -Wpedantic -Wno-ctad-maybe-unsupported -Wno-unsafe-buffer-usage -Wno-switch-enum -Wno-c++98-compat -Wno-c++98-compat-pedantic -Wno-nested-anon-types -Wno-gnu-anonymous-struct -Wno-reserved-identifier"
      }
    },

    //msvc
    {
      "name": "vulkan-debug-use-graphic-pipelines",
      "inherits": "default-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_GRAPHIC_PIPELINES": "TRUE"
      }
    },
    {
      "name": "vulkan-debug",
      "inherits": "default-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "vulkan-release-with-debug",
      "inherits": "default-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "GRAPHICS_API": "Vulkan"
      }
    },
    {
      "name": "vulkan-release",
      "inherits": "default-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GRAPHICS_API": "Vulkan"
      }
    },

    //CLANG
    {
      "name": "vulkan-clang-debug-use-graphic-pipelines",
      "inherits": "default-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_GRAPHIC_PIPELINES": "TRUE"
      }
    },
    {
      "name": "vulkan-clang-debug",
      "inherits": "default-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "vulkan-clang-release-with-debug",
      "inherits": "default-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "GRAPHICS_API": "Vulkan"
      }
    },
    {
      "name": "vulkan-clang-release",
      "inherits": "default-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GRAPHICS_API": "Vulkan"
      }
    }
  ]
}